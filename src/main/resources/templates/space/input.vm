<html>
  <head>
    <title>$action.getText("vbp.space.admin.tab.label")</title>
    <meta name="decorator" content="main"/>
    $webResourceManager.requireResourcesForContext("vbp-space-admin")
    $webResourceManager.requireResourcesForContext("vbp-validation-modes")
  </head>
  #applyDecorator("root")
    #decoratorParam("helper" $action.helper)
    #decoratorParam("context" "space-tab-link-vbp-space-config")

    #applyDecorator ("root")
      #decoratorParam ("context" "spacetoolspanel")
      #decoratorParam("helper" $action.helper)
      #decoratorParam("selectedSpaceToolsWebItem" "space-tools-link-vbp-space-config")

      <body>
        <h2>$action.getText("vbp.space.admin.caption")</h2>
        <table id="vbp-space-templates" class="confluenceTable">
        <thead>
          <tr>
            <th class="confluenceTh">$action.getText("vbp.template.label")</th>
            <th class="confluenceTh">$action.getText("vbp.template.mode.label")</th>
          </tr>
          <tbody>
            #foreach( $pageTemplate in $pageTemplates )
              <tr data-template-key="$pageTemplate.templateKey" data-validation-mode="$pageTemplate.validationMode">
                <td class="confluenceTd">
                  <a href="$req.contextPath/pages/templates2/viewpagetemplate.action?entityId=$pageTemplate.templateKey&key=$key">$pageTemplate.templateName</a>
                </td>
                #if ($pageTemplate.validationMode == "NONE")
                    <td class="confluenceTd">$action.getText("vbp.template.mode.NONE")</td>
                #elseif ($pageTemplate.validationMode == "WARN")
                    <td class="confluenceTd">$action.getText("vbp.template.mode.WARN")</td>
                #elseif ($pageTemplate.validationMode == "FAIL")
                    <td class="confluenceTd">$action.getText("vbp.template.mode.FAIL")</td>
                #else
                    <td class="confluenceTd"></td>
                #end
              </tr>
            #end
          </tbody>
        </table>
      </body>
    #end
  #end
</html>
